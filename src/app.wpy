<script>
import wepy from 'wepy'
import 'wepy-async-function'

import { setStore } from 'wepy-redux'
import configStore from './store'

const store = configStore()
setStore(store)

import { SET_HEIGHT, SET_STATUSBARHEIGHT } from './store/types'

export default class extends wepy.app {
  config = {
    pages: [
      'pages/index',
      'pages/myGroup',
      'pages/me',
      'pages/groupInfo'
    ],
    window: {
      navigationStyle: 'custom',
      backgroundTextStyle: 'light',
      navigationBarBackgroundColor: '#fff',
      navigationBarTitleText: 'WeChat',
      navigationBarTextStyle: 'black'
    },
    tabBar: {
      borderStyle: 'white',
      backgroundColor: '#FEFEFE',
      list: [{
        pagePath: 'pages/index',
        iconPath: 'assets/groups.png',
        selectedIconPath: 'assets/groups2.png'
      }, {
        pagePath: 'pages/myGroup',
        iconPath: 'assets/myGroup.png',
        selectedIconPath: 'assets/myGroup2.png'
      }, {
        pagePath: 'pages/me',
        iconPath: 'assets/me.png',
        selectedIconPath: 'assets/me2.png'
      }]
    }
  }

  globalData = {
    userInfo: null
  }

  constructor () {
    super()
    this.use('requestfix')
  }

  onLaunch() {
    wx.getSystemInfo({
      success(res) {
        console.log(res)
        // statusBarHeight
        store.dispatch({type: SET_HEIGHT, payload: res.windowHeight / res.windowWidth * 750})
        store.dispatch({type: SET_STATUSBARHEIGHT, payload: res.statusBarHeight})
      }
    })
  }

  getUserInfo(cb) {
    const that = this
    if (this.globalData.userInfo) {
      return this.globalData.userInfo
    }
    wepy.getUserInfo({
      success (res) {
        that.globalData.userInfo = res.userInfo
        cb && cb(res.userInfo)
      }
    })
  }
}
</script>
